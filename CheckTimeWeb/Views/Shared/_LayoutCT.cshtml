        padding: 0,0,0,0;
        border-radius: 15px;
        height: 505px;
        width: 241px;
    }

    .row {
        clear: both;
        width: 100%;
        margin: 0px;
        padding: 0px;
    }

    .cell {
        float: left;
        min-height: 100px;
        width: 24%;
        border: 0px solid black;
        text-align: center;
        min-width: 118px;
    }

    hr {
        width: 70%;
        border: 1px solid #dbbd66;
    }


    .row {
        position: relative;
        display: inline-block;
    }
    /*Para desplegar los sun menu */
    .dropbtn {
        background-color: #f5f5f5;
        color: white;
        padding: 0px 0px 0px 0px;
        font-size: 16px;
        border: none;
        height: 85px;
        width: 105px;
    }

    .dropdown {
        position: relative;
        display: inline-block;
        height: 85px;
        width: 105px;
        margin-top: 0px;
        top: 2px;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f1f1f1; /*se cabia el color del conteni*/
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
    }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

            .dropdown-content a:hover {
                background-color: #ddd
            }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .dropdown:hover .dropbtn {
        background-color: #3e8e41;
    }
</style>

